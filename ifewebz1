	<script>
		function $id(id){
		    return document.getElementById(id);
		}
		//获取dom节点
		var notice_text=$id('notice');
		var input_text=$id('content').value;
		var reg=/^[a-zA-Z_\u4e00-\u9fa5]+[a-zA-Z0-9_\u4e00-\u9fa5]/g;

		function check_length(){
            var len=$id('content').value.trim().length;
            if(len==0){
                notice_text.innerHTML='姓名不能为空';
                $id('content').style.borderColor='#f00';
                notice_text.style.color='#f00';
                return false;
            }else if(len>16 || len<4){
                notice_text.innerHTML='姓名长度不在范围内！';$id('content').style.borderColor='#f00';
                return false;
                }
            else{return true;}
		}
		function check_input(){
            if(check_length()){
                if(reg.test($id('content').value.trim())){
                    notice_text.innerHTML='名称格式正确！';
                    $id('content').style.borderColor='#0f0';
                    notice_text.style.color='#0f0';
                }else{
                    notice_text.innerHTML='名称格式不正确！';
                }
            }
		}
		$id('check').onclick=function(){
		    check_input();
		}
	</script>
